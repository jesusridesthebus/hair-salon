@using HairSalon.Models;

<h1>Specialties</h1>
<ul>
  @if(Model.Count == 0)
  {
    <p>No specialties in your list yet</p>
  }
  @if(Model.Count != 0)
  {
    @foreach(Specialty specialty in Model)
    {
      <li><a href="/specialties/@specialty.Id">@specialty.Description</a></li>
    }
  }
</ul>

<p><a href="/specialties/new">Add a new specialty</a></p>
<p><a href="/">Return Home</a></p>